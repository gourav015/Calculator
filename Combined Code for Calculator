<body>
    <div id="main">
        <div id="mycal" class="second"><p>&nbsp;Calculator</p></div>
        
            <h1 id="displaypara" class="second">0</h1>
        <div id="button">
        
        <button value="1" style="margin-left: 150px;" onclick="del()">&#9249;</button>
        <button value="1" onclick="cal('/')">&#247;</button>
        <button value="1" onclick="cal(7)">7</button>
        <button value="1" onclick="cal(8)">8</button>
        <button value="1" onclick="cal(9)">9</button>
        <button value="1" onclick="cal('*')">X</button>
        <button value="1" onclick="cal(4)">4</button>
        <button value="1" onclick="cal(5)">5</button>
        <button value="1" onclick="cal(6)">6</button>
        <button value="1" onclick="cal('-')">-</button>
        <button value="1" onclick="cal(1)">1</button>
        <button value="1" onclick="cal(2)">2</button>
        <button value="1" onclick="cal(3)">3</button>
        <button value="1" onclick="cal('+')">+</button>
        <button value="1" onclick="delet()">C</button>
        <button value="1" onclick="cal(0)">0</button>
        <button value="1" onclick="cal('.')">.</button>
        <button value="1" onclick="sum(),change()">=</button>
        </div>

        
